import("//build/test.gni")
import("//foundation/multimedia/camera_framework/multimedia_camera_framework.gni")

module_output_path = "camera_framework/media_stream_unittest"

cfilter_unit_test_cflags = [
  "-std=c++17",
  "-fno-rtti",
  "-fexceptions",
  "-Wall",
  "-fno-common",  
  "-Wshadow",
  "-FPIC",
  "-FS",
  "-O2",
  "-D_FORTIFY_SOURCE=2",
  "-fvisibility=hidden",
  "-Wformat=2",
  "-Wdate-time",
  "-Wextra",
  "-Wimplicit-fallthrough",
  "-Wsign-compare",
  "-Dprivate=public",
  "-Dprotected=public",
]

ohos_unittest("cfilter_unit_test") {
  module_out_path = module_output_path
  include_dirs = [
    "include"
  ]

  defines = [
  ]

  sources = [
    "src/audio_capture_adapter_unit_test.cpp",
    "src/audio_capture_filter_unit_test.cpp",
    "src/audio_encoder_filter_unit_test.cpp",
    "src/audio_fork_filter_unit_test.cpp",
    "src/audio_process_filter_unit_test.cpp",
    "src/cfilter_unit_test.cpp",
    "src/cinematic_video_cache_filter_unit_test.cpp",
    "src/metadata_filter_unit_test.cpp",
    "src/muxer_filter_unit_test.cpp",
    "src/video_encoder_adapter_unit_test.cpp",
    "src/video_encoder_filter_unit_test.cpp",
  ]

  cflags = cfilter_unit_test_cflags

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  deps = [
    "${multimedia_camera_framework_path}/mediastream:media_stream",
    "${multimedia_camera_framework_path}/common:camera_utils",
    "${multimedia_camera_framework_path}/test/test_common:test_common",
  ]

  external_deps = [
    "access_token:libtokensetproc_shared",
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "audio_framework:audio_capturer",
    "audio_framework:audio_client",
    "av_codec:av_codec_client",
    "av_codec:av_codec_media_engine_modules",
    "c_utils:utils",
    "graphic_surface:surface",
    "graphic_surface:sync_fence",
    "googletest:gmock_main",
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "hitrace:hitrace_meter",
    "image_framework:image_native",
    "ipc:ipc_core",
    "memory_utils:libdmabufheap",
    "samgr:samgr_proxy",
  ]
}