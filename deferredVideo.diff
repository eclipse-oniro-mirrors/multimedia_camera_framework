+        if (ret == 0) {
+            DP_DEBUG_LOG("thread (%s) priority: %{public}d, policy = %{public}d(0:OTHER, 1:FIFO, 2:RR)",
+                workerInfo.name.c_str(), sch.sched_priority, policy);
