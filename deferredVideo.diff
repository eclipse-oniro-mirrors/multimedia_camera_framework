+                "DPS_RESUME_VIDEO",
+                HiviewDFX::HiSysEvent::EventType::BEHAVIOR,
+                EVENT_KEY_PNAMEID, bundleName,
+                EVENT_KEY_PVERSIONID, version,
+                EVENT_KEY_VIDEOID, videoId,
