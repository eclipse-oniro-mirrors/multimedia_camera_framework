+        HiviewDFX::HiSysEvent::EventType::BEHAVIOR,
+        EVENT_KEY_PNAMEID, callerInfo.bundleName,
+        EVENT_KEY_PVERSIONID, callerInfo.pid,
+        EVENT_KEY_VIDEOID, videoId);
+}
