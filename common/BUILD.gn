common_sources = [
  "src/task_manager/task_group/base_task_group.cpp",
  "src/task_manager/task_group/delayed_task_group.cpp",
  "src/task_manager/task_group/task_group.cpp",
  "src/task_manager/task_manager.cpp",
  "src/task_manager/task_registry.cpp",
